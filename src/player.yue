{ graphics: lg, mouse: lm } = love

import "lib.HC" as HC

export class Player
  new: =>
    @pos = {x: 900, y: 1000}
    @speed = 10
    @image = lg.newImage "assets/sprites/paddle.png"
    @collider = HC.rectangle(@pos.x, @pos.y, lg.getWidth(@image), lg.getHeight(@image))

  update: (dt)=>
    @pos.x = lm.getX!

  draw: =>
    lg.draw(@image, @pos.x, @pos.y)
