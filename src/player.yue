{ graphics: lg, mouse: lm } = love

import "lib.bump"

export class Player
  new: (world)=>
    @pos = {x: 900, y: 1000}
    @speed = 10
    @image = lg.newImage "assets/sprites/paddle.png"
    @image_width, @image_height = lg.getWidth(@image), lg.getHeight(@image)

  update: (dt)=>
    @pos.x = lm.getX!

  draw: =>
    lg.draw(@image, @pos.x, @pos.y)
