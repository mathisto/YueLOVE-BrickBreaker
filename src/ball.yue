{ graphics: lg, mouse: lm } = love

import "lib.bump"

export class Ball
  new: (x, y, world)=>
    @pos = { x: x, y: y }
    @speed = 10
    @image = lg.newImage "assets/sprites/blue-ball.png"
    @image_width, @image_height = @image\getWidth!, @image\getHeight!
    @velocity = { x: 100, y: -100 }

  update: (dt)=>
    return true

  draw: =>
    lg.draw(@image, @pos.x, @pos.y)
