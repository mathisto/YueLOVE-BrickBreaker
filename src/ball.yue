{ graphics: lg, mouse: lm } = love

import "lib.bump"

export class Ball
  new: (x, y, world)=>
    @pos = { x: x, y: y }
    @speed = 10
    @image = lg.newImage "assets/sprites/blue-ball.png"
    @image_width, @image_height = lg.getWidth(@image), lg.getHeight(@image)

  update: (dt)=>
    @pos.x, @pos.y = 800, 950

  draw: =>
    lg.draw(@image, @pos.x, @pos.y)
